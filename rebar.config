{erl_opts, [
  {parse_transform, lager_transform},
  warn_unused_vars,
  warn_export_all,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_bif_clash,
  warn_unused_record,
  warn_deprecated_function,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  warn_missing_spec,
  warn_untyped_record, debug_info
]}.
{deps, [
  {lager,   "3.2.1"},
  {jsx,     "2.8.0"},
  {hackney, "1.6.1"}
]}.

{profiles, [
  {test, [
    {deps, [
      {katana_test,
       {git, "git://github.com/inaka/katana-test.git",
        {tag, "0.0.6"}}},
      {mixer,
       {git, "git://github.com/inaka/mixer.git",
        {tag, "0.1.5"}}},
      {meck, "0.8.4"}
    ]}
  ]}
]}.
